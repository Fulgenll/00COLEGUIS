<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@layout/border"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/imgpeticionenviadadialogc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/d11"
        android:layout_marginTop="@dimen/d50"
        android:layout_marginHorizontal="@dimen/d50"
        app:srcCompat="@drawable/animacion_dialog_colega" />

    <TextView
        android:id="@+id/txtcomentariodialogc"
        style="@style/txtcomentario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/d15"
        android:text="PETICIÓN ENVIADA"
        android:textSize="@dimen/d65" />

    <TextView
        android:id="@+id/txtcomentariodescripdialogc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/d18"
        style="@style/txtgenericos"
        android:text="Esperemos que haya filing entre tu y USUARIO. Si el usuario está interesado se pondrá en contacto contigo :)" />
</LinearLayout>
