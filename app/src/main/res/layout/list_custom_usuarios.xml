<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/fondo"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_margin="@dimen/d11">

        <TextView
            android:id="@+id/tvperfillistcustomusuarios"
            style="@style/txtavatarusuarioslist"
            android:layout_width="191dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="5" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvnombrelistcustomusuarios"
                    style="@style/txtgenericos"
                    android:layout_width="320dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:text="NombreUsuario" />

                <TextView
                    android:id="@+id/tvedadlistcustomusuarios"
                    style="@style/txtgenericos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="Edad ##" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvgustoslistcustomusuarios1"
                    style="@style/txtgustosusuarioslist"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="A" />

                <TextView
                    android:id="@+id/tvgustoslistcustomusuarios2"
                    style="@style/txtgustosusuarioslist"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="B" />

                <TextView
                    android:id="@+id/tvgustoslistcustomusuarios3"
                    style="@style/txtgustosusuarioslist"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="C" />

                <TextView
                    android:id="@+id/tvgustoslistcustomusuarios4"
                    style="@style/txtgustosusuarioslist"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="D" />

                <TextView
                    android:id="@+id/tvgustoslistcustomusuarios5"
                    style="@style/txtgustosusuarioslist"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="E" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>
