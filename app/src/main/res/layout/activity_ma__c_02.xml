<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    style="@style/fondo"
    tools:context="com.example.fulge.a00coleguis.MA_C_02">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/fondocabecera"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvcabeceraavatarc02"
            style="@style/txtcabeceraimag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="0" />

        <TextView
            android:id="@+id/tvcabecerac02"
            style="@style/txtcabecera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="DATOS DEL EVENTO" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/d25">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/d11"
            android:orientation="vertical">

            <EditText
                android:id="@+id/etnombrec02"
                style="@style/txtedittext2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="text"
                android:text="NOMBRE" />

            <Spinner
                android:id="@+id/spinprovinciasc02"
                android:layout_marginTop="@dimen/d18"
                android:layout_marginBottom="@dimen/d18"
                style="@style/txtedittext2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/etciudadc02"
                style="@style/txtedittext2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="text"
                android:text="CIUDAD" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="@dimen/d50"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/etfechac02"
                    style="@style/txtedittext3"
                    android:layout_width="227dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="date" />

                <TextView
                    android:id="@+id/tvfechac02"
                    style="@style/txtfechaimg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:text="4" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="@dimen/d50"
                android:layout_marginTop="@dimen/d21"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvsubefoto02"
                    style="@style/txtedittext3"
                    android:layout_width="227dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:text="SUBE LA FOTO :D" />

                <TextView
                    android:id="@+id/btnsubefotoc02"
                    style="@style/txtfechaimg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:text="G" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
